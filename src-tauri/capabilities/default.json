{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "dialog:default",
    "store:default",
    "fs:read-files",
    "fs:write-files",
    "fs:read-dirs",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/**/*" }
      ]
    }
  ],
  "platforms": ["macOS", "linux", "windows"]
}
