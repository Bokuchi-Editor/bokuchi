{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MD Editor",
  "version": "0.1.0",
  "identifier": "com.saita_shinya.md-editor",
  "build": {
    "beforeDevCommand": "npm run dev:desktop",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:desktop",
    "frontendDist": "../dist-desktop"
  },
  "app": {
    "windows": [
      {
        "title": "MD Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
