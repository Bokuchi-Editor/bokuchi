{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bokuchi",
  "version": "0.1.0",
  "identifier": "com.pemomomo.bokuchi",
  "build": {
    "beforeDevCommand": "npm run dev:desktop",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:desktop",
    "frontendDist": "../dist-desktop"
  },
  "app": {
    "windows": [
      {
        "title": "Bokuchi",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/bokuchi-icon_32x32.png",
      "icons/bokuchi-icon_128x128.png",
      "icons/bokuchi-icon_128x128@2x.png",
      "icons/bokuchi.icns",
      "icons/bokuchi.ico"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
