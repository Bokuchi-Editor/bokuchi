{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bokuchi",
  "version": "0.4.1",
  "identifier": "com.pemomomo.bokuchi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Bokuchi",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/bokuchi-icon_32x32.png",
      "icons/bokuchi-icon_128x128.png",
      "icons/bokuchi-icon_128x128@2x.png",
      "icons/bokuchi.icns",
      "icons/bokuchi.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null,
      "signingIdentity": "Developer ID Application: SHINYA SAITA (RNGXZZHG98)",
      "providerShortName": "RNGXZZHG98",
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    },
    "windows": {
      "wix": {
        "language": ["en-US", "ja-JP"]
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "createUpdaterArtifacts": true,
    "fileAssociations": [
      {
        "ext": ["md"],
        "mimeType": "text/markdown",
        "description": "Markdown Document",
        "role": "Editor"
      },
      {
        "ext": ["txt"],
        "mimeType": "text/plain",
        "description": "Text Document",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/Bokuchi-Editor/bokuchi/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
