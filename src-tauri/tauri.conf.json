{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bokuchi",
  "version": "0.1.1",
  "identifier": "com.pemomomo.bokuchi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bokuchi",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/bokuchi-icon_32x32.png",
      "icons/bokuchi-icon_128x128.png",
      "icons/bokuchi-icon_128x128@2x.png",
      "icons/bokuchi.icns",
      "icons/bokuchi.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null,
      "signingIdentity": "Developer ID Application: Your Name (TEAM_ID)",
      "providerShortName": "YOUR_TEAM_ID",
      "entitlements": null,
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "fileAssociations": [
      {
        "ext": ["md"],
        "mimeType": "text/markdown",
        "description": "Markdown Document"
      },
      {
        "ext": ["txt"],
        "mimeType": "text/plain",
        "description": "Text Document"
      }
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
